---
interface Props {
  name: string;
  url: string;
}

const { name, url }: Props = Astro.props;
const twitchUsername = url
  .replace(/https:\/\/(www\.)?twitch\.tv\//, "")
  .replace("@", "");
---

<a href={`https://twitch.tv/${twitchUsername}`} title="${name}'s Twitch Profile"
  ><span class="sr-only">{name}'s Twitch Profile</span>
  <svg
    viewBox="0 0 24 24"
    width="24"
    height="24"
    stroke="currentColor"
    stroke-width="2"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="css-i6dzq1"
    ><path d="M21 2H3v16h5v4l4-4h5l4-4V2zm-10 9V7m5 4V7"></path></svg
  >
</a>
