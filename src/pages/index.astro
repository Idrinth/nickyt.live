---
import Layout from "../layouts/HomePageLayout.astro";
import {
  getVideos,
  sanitizeVideoDescription,
  DEFAULT_YT_FEED_URL,
} from "../utils/youtube-utils";

const videos = await getVideos(DEFAULT_YT_FEED_URL);

// Cache for 4 hours
Astro.response.headers.set(
  "Cache-Control",
  "s-maxage=14400, stale-while-revalidate"
);
---

<Layout title="Nick Taylor's live streaming homepage">
  <div>
    <header>
      <h1 class="text-3xl sm:text-4xl md:text-6xl lg:text-8xl">nickyt.live!</h1>
      <nav aria-label="main navigation" class="mt-2 sm:text-xl md:text-3xl">
        <ul class="list-none flex gap-6 items-center">
          <li>
            <a href="/schedule" data-twitch>Schedule</a>
          </li>
          <li>
            <a href="https://twitch.tv/nickytonline" data-twitch>Twitch</a>
          </li>

          <li>
            <a href="https://nickyt.tube">YouTube</a>
          </li>
        </ul>
      </nav>
    </header>
    <main class="mt-4 md:mt-8 lg:mt-16 sm:text-xl md:text-3xl">
      <div class="grid gap-16">
        <h1>Latest Videos</h1>
        {
          videos.map((video) => (
            <article class="grid md:grid-cols-[480px,1fr] gap-6">
              <a href={video.link}>
                <img
                  src={video.thumbnail}
                  alt={video.title}
                  class="rounded-md w-[240px] h-[180px] md:w-[480px] md:h-[360px] object-cover"
                />
              </a>
              <div class="flex flex-col gap-4 w-max[480px] md:max-w-[65ch]">
                <h2>{video.title}</h2>
                <p set:html={sanitizeVideoDescription(video.description)} />
                <a href={video.link}>Watch on YouTube</a>
              </div>
            </article>
          ))
        }
      </div>
    </main>
  </div>
</Layout>
